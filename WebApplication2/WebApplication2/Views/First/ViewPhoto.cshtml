@model WebApplication2.Models.Thumbnail

@{
    ViewBag.Title = "ViewPhoto";
}

<h2>ViewPhoto</h2>

<p>picture to show full path is: @Model.fullPath</p>

@{ 
    var relativePath = "/OutputFromApp/" + Model.year + "/" + Model.month + "/" + Model.name; @*change here after we know how!!*@
}
<p>relative path is: @relativePath</p>

<div>
    <h4>@Model.name</h4>
    <p>Taken In @Model.month/@Model.year</p>

    <img src="@relativePath"


</div>

<div>
    @Html.ActionLink("Delete", "DeletePhotoPressed", new { picNumber = Model.picNumber }, new { @class = "btn btn-primary btn-lg" })

</div>
